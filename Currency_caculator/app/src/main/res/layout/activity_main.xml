<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D3D3"
    android:orientation="vertical"
    tools:background="#D6D3D3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inputText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1"
                android:textSize="72sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/convertFrom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="23,000"
                android:textSize="72sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/convertTo"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#EAE5E5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="7"
                android:onClick="sevenOnclick"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="8"
                android:onClick="eightOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="9"
                android:onClick="nineOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="4"
                android:onClick="fourOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="5"
                android:onClick="fiveOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="6"
                android:onClick="sixOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="1"
                android:onClick="oneOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="2"
                android:onClick="twoOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="3"
                android:onClick="threeOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="."
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#CFCACA" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="0"
                android:onClick="zeroOnclick"

                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                tools:background="#DDD4D4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="clearInput"
                android:text="CE"
                android:textColor="@color/black"
                android:textSize="40sp"
                tools:background="#CFCACA" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>